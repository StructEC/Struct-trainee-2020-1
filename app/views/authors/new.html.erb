<h1>Novo Autor</h1>

<%= form_with model: @author do |form| %>
  <div class="field">
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email, 'E-mail' %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :year, 'Ano' %>
    <%= form.number_field :year %>
  </div>

  <div class="actions">
    <%= form.submit "Criar autor" %>
  </div>
<% end %>

<%= link_to 'Voltar', authors_path %>

